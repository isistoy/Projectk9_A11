<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThoughtDef>
    <defName>EnvironmentUgly</defName>
    <workerClass>ThoughtWorker_BeautyUgly</workerClass>
    <nullifyingTraits>
      <li>Resilient</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>ugly environment</label>
        <description>This place is unpleasant to be in.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
      <li>
        <label>very ugly environment</label>
        <description>This place is really unpleasant. I don't want to be here.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>hideous environment</label>
        <description>This place is unbearable. Get me out of here...</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


  <ThoughtDef>
    <defName>EnvironmentPretty</defName>
    <workerClass>ThoughtWorker_BeautyPretty</workerClass>
    <nullifyingTraits>
      <li>Resilient</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>pleasant environment</label>
        <description>This place is nice.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
      <li>
        <label>very pleasant environment</label>
        <description>I really like this place. It's beautiful.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
      <li>
        <label>beautiful environment</label>
        <description>This place is beautiful. It lifts me up and makes me love life.</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>